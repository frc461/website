<%= form_for @album, html: { class: "form-horizontal" } do |f| %>
	<div class="control-group">
		<%= f.label :name, class: "control-label" %>
		<div class="controls">
			<%= f.text_field :name, class: "text_field" %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :visible, class: "control-label" %>
		<div class="controls">
			<%= f.check_box :visible, class: "check_box" %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :description, class: "control-label" %>
		<div class="controls">
			<%= f.text_area :description, class: "text_area" %>
		</div>
	</div>
	
	<div class="control-group">
		<%= f.label :tag_list, class: "control-label" %>
		<div class="controls">
			<%= f.text_area :tag_list, class: "text_area" %>
		</div>
	</div>

	<div class="form-actions">
		<%= f.submit nil, class: "btn btn-primary" %>
		<%= link_to "Cancel", albums_path, class: "btn" %>
	</div>
<% end %>
