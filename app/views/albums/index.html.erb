<% title "Photos" %>

<% content_for :breadcrumb do %>
	<ul class="breadcrumb span12">
		<li>
			<%= link_to "Home", root_path %><span class="divider">/</span>
		</li>

		<li class="active">Albums</li>
	</ul>
<% end %>

<div class="page-header">
	<h1>
		Albums
	</h1>
</div>

<% @albums.in_groups_of(3) do |grp| %>
	<div class="row-fluid">
		<% grp.each do |album| %>
			<% if album %>
				<div class="span4 twitter-border">
					<h4>
						<%= link_to album.name, album_path(album) %>
					</h4>
				</div>
			<% end %>
		<% end %>
	</div>
<% end %>

<% if can? :create, Album %>
	<%= link_to "New",
		new_album_path,
		:class => "btn btn-primary" %>
<% end %>
