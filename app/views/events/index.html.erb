<%- model_class = Event -%>
<% content_for :title do
     "Calendar"
   end %>

<div class="page-header">
  <h1> Calendar </h1>
</div>
<div id='calendar'></div>
<br />
<script>
$(document).ready(function() {
  $('#calendar').fullCalendar({
    events: '/events.json'
  })
});
</script>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
