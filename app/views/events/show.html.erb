<%- model_class = Event -%>
<% content_for :title do
     "Calendar"
   end %>
<% content_for :breadcrumb do %>
<ul class="breadcrumb span12">
  <li><%= link_to "Home", root_path%><span class="divider">/</span></li>
  <li><%= link_to "Calendar", events_path%><span class="divider">/</span></li>
  <li class="active"><%= @event.title %></li>
</ul>
<% end %>
<div class="page-header">
  <h1><%= @event.title %></h1>
</div>
<%= @event.location %>
<br />
<%= @event.startDate.in_time_zone.strftime("%d/%m/%Y %R") %> - <%= @event.endDate.in_time_zone.strftime("%d/%m/%Y %R") %>
<hr />
<%= @event.content %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <% if can? :update, Event  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_event_path(@event), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                event_path(@event),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <%end%>
</div>
