<%- model_class = Post -%>
<div class="page-header">
  <h1>Blog</h1>
</div>
<% @posts.in_groups_of(10) do | groupOfPosts | %>
  <% groupOfPosts.each do | post | %>
    <% if (post != nil) %>
      <div class="row-fluid">
        <div class="span12 postWithBorder">
          <h2>
            <%= link_to(post.title, post, :class => "") %>
          </h2>
          <br />
          <%= post.content.lines.first(10).join %>
          <br />
          <br />
        </div>
      </div>
      <br />
    <% end %>
  <% end %>
<% end %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
