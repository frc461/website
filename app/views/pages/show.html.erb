<%- model_class = Page -%>
<% if @page.pages.count > 0  %>
<% content_for :ChildrenPages do %>
  <div class="well">
    <ul class="nav nav-list">
      <% @page.pages.each do |children| %>
        <li><%= link_to_page children %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
<% end %>
<% content_for :breadcrumb do %>
<ul class="breadcrumb span12">
  <li><%= link_to "Home", root_path%><span class="divider">/</span></li>
  <li><%= link_to "Pages", pages_path%><span class="divider">/</span></li>
  <% if @page.parent != nil %>
    <li>
    <%= link_to_page @page.parent %><span class="divider">/</span></li>
  <% end %>
  <li class="active">
  <%= @page.title %>
  </li>
</ul>
<% end %>
<% content_for :title do
     @page.title
   end %>

<div class="page-header">
  <h1><%= @page.title %></h1>
</div>

<div class="page_body">
  <%= format @page.content %>
</div>

<!--<dl class="dl-horizontal">
  <dt><strong>Children:</strong></dt>
  <dd><%# sanitize(@page.pages.map do |pg| link_to(pg.title, pg) end.join(", ".html_safe)) %></dd>
</dl>-->

<% if can?(:read, @page) && can?(:write, @page) %>
<div class="form-actions">
  <%= link_to "Back", pages_path, :class => 'btn'  %>
  <%= link_to "Edit", edit_page_path(@page), :class => 'btn' %>
  <%= link_to "Deletify", page_path(@page), :method => 'delete',
              :data => { :confirm => "Are ye sure?" }, :class => 'btn btn-danger' %>
</div>
<% end %>
