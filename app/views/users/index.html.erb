<div class="page-header">
	<h1>
		Users
	</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Admin</th>
		</tr>
	</thead>
	<tbody>
		<% @users.order(:created_at).each do |user| %>
			<tr>
				<td><%= link_to user.name, user_path(user) %></td>
				<td><%= user.email %></td>
				<td><%= user.admin %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New",
	new_user_path,
	:class => "btn btn-primary" %>
