<% content_for :title do
     "Search Results"
   end %>
<div class="page-header"><h1>Search Results</h1></div>
<% if @results.count >= 1 %>
  <p>Results for <%= params[:search] %></p>
  <% @results.in_groups_of(3) do |groupofresult| %>
    <div class="row-fluid">
    <% groupofresult.each do |thing| %>
      <% if thing != nil %>
        <div class="span4 postWithBorder">
          <h2>
          <% if thing.is_a? Page %>
            <%= link_to_page thing %>
          <% else %>
            <% if thing.is_a? Album %>
              <%= link_to thing.name, thing %>
            <% else %>
              <%= link_to thing.title, thing %>
            <% end %>
          <% end %>
          </h2>
        </div>
    <% end %>
  <% end %>
    </div>
    <br />
  <% end %>
<% else %>
<p>No matches for <%= params[:search] %></p>
<% end %>
