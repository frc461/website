<div class="page-header">
	<h1>
		Groups
	</h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
		<% @groups.each do |group| %>
			<tr>
				<td><%= link_to(group.name, group) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New",
	new_group_path,
	:class => "btn btn-primary" %>
