<%- model_class = Group -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @group.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:joinable) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.joinable, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:page_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.page_access, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:post_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.post_access, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.photo_access, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.event_access, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.user_access, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:forum_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.forum_access, :disabled => "disabled" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_access) %>:</strong></dt>
  <dd><%= check_box_tag "", "", @group.group_access, :disabled => "disabled" %></dd>
  <dt><strong>Users:</strong></dt>
  <dd><%= @group.users.map do |usr| link_to(usr.name, usr) end.join(", ").html_safe%></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              groups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_path(@group), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_path(@group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
