<div class="page-header">
	<h1>
		Photos
	</h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Album ID</th>
			<th>Created At</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @photos.each do |photo| %>
		<tr>
			<td><%= link_to photo.id, photo_path(photo) %></td>
			<td><%= photo.album_id %></td>
			<td><%= photo.created_at %></td>
			<td>
				<%= link_to Edit,
					edit_photo_path(photo),
					:class => 'btn btn-mini' %>
				<%= link_to "Delete",
					photo_path(photo),
					:method => :delete,
					:data => { :confirm => "Are you sure?" },
					:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New",
	new_photo_path,
	:class => "btn btn-primary" %>
