<div class="page-header">
  <h1><%= @todo.name %></h1>
</div>

<div class="page_body">
  <%= format @todo.content %>
</div>

<div class="form-actions">
  <%= link_to "Back", todos_path, :class => 'btn' %>
  <% if can? :write, @todo %>
    <%= link_to "Edit", edit_todo_path, :class => 'btn' %>
  <% end %>
  <% if can? :remove, @todo %>
  <%= link_to "Deletify", todo_path, :method => 'delete',
              :data => { :confirm => "Are ye sure?"}, :class => 'btn btn-danger' %>
  <% end %>
</div>
