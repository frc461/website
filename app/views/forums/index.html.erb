<%- model_class = Forum -%>
<% content_for :title do
     "Forums"
   end %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
    </tr>
  </thead>
  <tbody>
<% Forum.where(:group_id => nil).order("name ASC").each do | forum | %>
      <tr>
        <td><%= link_to forum.name, forum_path(forum) %></td>
        <td><%= forum.description %></td>
      </tr>
<% end %>
  </tbody>
</table>

<% Group.order("name ASC").each do | group | %>
<% if current_user.groups.include?(group) || current_user.admin %>
<h1><%= group.name %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
    </tr>
  </thead>
  <tbody>
<% group.forums.order("name ASC").each do | forum | %>
      <tr>
        <td><%= link_to forum.name, forum_path(forum) %></td>
        <td><%= forum.description %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<% end %>
<% end %>

<% if can? :write, Forum %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_forum_path,
            :class => 'btn btn-primary' %>
<% end %>
<br />
